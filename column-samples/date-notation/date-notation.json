{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "elmType": "div",
  "txtContent": "= getDate(@currentField) + '-' + Number(getMonth(@currentField)+1) + '-' + getYear(@currentField) + ' ' + if(endsWith(toLocaleTimeString(@currentField),'AM'),if(substring(toLocaleTimeString(@currentField),1,2)==':',substring(toLocaleTimeString(@currentField),0,1) + ':' + substring(toLocaleTimeString(@currentField),2,4),substring(toLocaleTimeString(@currentField),0,2) + ':' + substring(toLocaleTimeString(@currentField),3,5)), if(endsWith(toLocaleTimeString(@currentField),'PM'),if(substring(toLocaleTimeString(@currentField),1,2)==':',Number(substring(toLocaleTimeString(@currentField),0,1))+12 + ':' + substring(toLocaleTimeString(@currentField),2,4),Number(substring(toLocaleTimeString(@currentField),0,2))+12+ ':' + substring(toLocaleTimeString(@currentField),2,4)),if(substring(toLocaleTimeString(@currentField),1,2)==':',substring(toLocaleTimeString(@currentField),0,1) + ':' + substring(toLocaleTimeString(@currentField),2,4),substring(toLocaleTimeString(@currentField),0,2)+ ':' + substring(toLocaleTimeString(@currentField),3,5))))"
}